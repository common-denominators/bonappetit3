<div id="home">
  <div class="container">
    <h1>Order Details</h1>
    <p>{{ordergroup}}</p>
    <ul id="order-detail-list" class="list-group">
      {{#each user}}
      <li data-id="{{this.id}}" class="list-group-item">
        <a href="order/{{this.id}}">{{this.username}}</a>
        <button class="btn btn-danger float-right delete">ï½˜</button>
      </li>
      {{/each}}
    </ul>
    <form class="clearfix mb-4" action="POST">
      <div class="form-group">
        <label for="example-text">Menu Item</label>
        <input type="text" id="menuItem" class="form-control" aria-describedby="example-text"
          placeholder="Enter Example Text">
      </div>
      <div class="form-group">
        <label for="example-text">Special Request</label>
        <input type="text" id="specialRequest" class="form-control" aria-describedby="example-text"
          placeholder="Enter Example Text">
      </div>

      <button id="addToOrderBtn" class="btn btn-primary float-right">Add to Order</button>
    </form>
  </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>