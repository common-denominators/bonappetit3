{{> searchnav }}

<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">

        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Username</label>
            <input type="text" id="username" class="form-control" aria-describedby="example-text"
              placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="example-text">First Name</label>
            <input type="text" id="firstName" class="form-control" aria-describedby="example-text"
              placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="example-text">Last Name</label>
            <input type="text" id="lastName" class="form-control" aria-describedby="example-text"
              placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="example-text">Phone</label>
            <input type="text" id="phone" class="form-control" aria-describedby="example-text"
              placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="example-text">Email</label>
            <input type="text" id="email" class="form-control" aria-describedby="example-text"
              placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <div class="form-group">
              <label for="example-text">Password</label>
              <input type="text" id="password" class="form-control" aria-describedby="example-text"
                placeholder="Enter Example Text">
            </div>
            <div class="form-group">
              <div class="form-group">
                <label for="example-text">Reenter Password</label>
                <input type="text" id="passwordConfirm" class="form-control" aria-describedby="example-text"
                  placeholder="Enter Example Text">
              </div>
              <button id="newUserSubmitBtn" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Examples:</h3>
        <ul id="example-list" class="list-group">
          {{#each users}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="users/{{this.id}}">{{this.username}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>



<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>

{{> footer}}